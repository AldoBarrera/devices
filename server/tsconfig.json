{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module"                      : "commonjs",
    "outDir"                      : "./dist",
    "resolveJsonModule"           : true,
    "esModuleInterop"             : true,
    "target"                      : "es6",
    "allowJs" : true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
